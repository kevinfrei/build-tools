{
  "name": "@freik/build-tools",
  "version": "3.3.0",
  "description": "Tools for building stuff (cross platform!)",
  "author": "Kevin Frei (kevinfrei@hotmail.com)",
  "license": "Unlicense",
  "type": "module",
  "bin": {
    "er": "./lib/tools.js",
    "ftool": "./lib/tools.js"
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevinfrei/build-tools.git"
  },
  "scripts": {
    "min": "node ./lib/tools.js minify -i lib/*.js",
    "test": "jest --passWithNoTests --config jestconfig.json",
    "build": "rimraf lib && tsc",
    "prepare": "yarn run build",
    "prepublishOnly": "yarn test && yarn run lint && pinst --disable",
    "format": "ftool format",
    "lint": "yarn run eslint --fix --ext .ts src",
    "preversion": "yarn run lint",
    "version": "yarn run format && git add -A src",
    "postversion": "git push && git push --tags --no-verify",
    "compile": "tsc --noEmit",
    "chk": "yarn format && yarn lint && yarn compile && yarn test",
    "postinstall": "husky install",
    "postpublish": "pinst --enable"
  },
  "dependencies": {
    "@babel/cli": "~7",
    "@babel/core": "~7",
    "@babel/preset-env": "~7",
    "@babel/preset-flow": "~7",
    "@babel/preset-react": "~7",
    "@freik/core-utils": "~1",
    "@freik/node-utils": "~1",
    "@rollup/plugin-babel": "~5",
    "@rollup/plugin-node-resolve": "~14",
    "@typescript-eslint/parser": "~5",
    "concurrently": "~7",
    "cross-env": "~7",
    "eslint": "~8",
    "eslint-config-prettier": "~8",
    "eslint-plugin-import": "~2",
    "eslint-plugin-prettier": "~4",
    "glob": "~8",
    "jest": "~28",
    "jest-extended": "~3.1.0",
    "jest-transform-css": "~4",
    "minimist": "~1",
    "postcss": "~8",
    "prettier": "~2",
    "rimraf": "~3",
    "rollup": "~2",
    "rollup-plugin-dts": "~4",
    "rollup-plugin-terser": "~7",
    "shelljs": "~0",
    "source-map-explorer": "~2",
    "terser": "~5",
    "ts-jest": "~28",
    "typescript": "~4",
    "wait-on": "~6"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/jest": "^27.5.1",
    "@types/minimist": "^1.2.2",
    "@types/node": "^17.0.35",
    "@types/shelljs": "^0.8.11",
    "@types/uglify-es": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "husky": "^8.0.1",
    "pinst": "^3.0.0"
  },
  "peerDependencies": {
    "prettier": "~2",
    "react": "~17",
    "react-scripts": "~5",
    "typescript": "~4"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-scripts": {
      "optional": true
    }
  },
  "engines": {
    "node": "~14.13.1 || >= 16.0.0"
  },
  "packageManager": "yarn@3.1.1"
}
