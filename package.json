{
    "name": "@freik/build-tools",
    "version": "2.8.1",
    "description": "Tools for building stuff (cross platform!)",
    "author": "Kevin Frei (kevinfrei@hotmail.com)",
    "license": "Unlicense",
    "bin": {
        "er": "./lib/tools.js"
    },
    "files": [
        "lib/**/*"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kevinfrei/build-tools.git"
    },
    "type": "module",
    "private": false,
    "scripts": {
        "min": "node ./lib/tools.js minify -i lib/*.js",
        "test": "jest --passWithNoTests --config jestconfig.json",
        "build": "rimraf lib && tsc",
        "prepare": "yarn run build",
        "prepublishOnly": "yarn test && yarn run lint && pinst --disable",
        "format": "prettier --write \"**/*.ts\" \"**/*.md\" \"**/*.json\" \"**/*.js\"",
        "lint": "yarn run eslint --fix --ext .ts src",
        "preversion": "yarn run lint",
        "version": "yarn run format && git add -A src",
        "postversion": "git push && git push --tags --no-verify",
        "compile": "tsc --noEmit",
        "chk": "yarn format && yarn lint && yarn compile && yarn test",
        "postinstall": "husky install",
        "postpublish": "pinst --enable"
    },
    "dependencies": {
        "@babel/cli": "^7.15.7",
        "@babel/core": "^7.15.5",
        "@babel/preset-flow": "^7.14.5",
        "@babel/preset-react": "^7.14.5",
        "@typescript-eslint/parser": "^4.31.1",
        "concurrently": "^6.2.1",
        "cross-env": "^7.0.3",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.2.0",
        "jest-extended": "^0.11.5",
        "jest-transform-css": "^2.1.0",
        "minimist": "^1.2.5",
        "postcss": "^8.3.6",
        "prettier": "^2.4.1",
        "rimraf": "^3.0.2",
        "shelljs": "^0.8.4",
        "source-map-explorer": "^2.5.2",
        "terser": "^5.8.0",
        "ts-jest": "^27.0.5",
        "typescript": "^4.4.3",
        "wait-on": "^6.0.0"
    },
    "devDependencies": {
        "@types/concurrently": "^6.2.1",
        "@types/jest": "^27.0.1",
        "@types/minimist": "^1.2.2",
        "@types/node": "^16.9.2",
        "@types/shelljs": "^0.8.9",
        "@types/uglify-es": "^3.0.0",
        "@typescript-eslint/eslint-plugin": "^4.31.1",
        "eslint": "^7.32.0",
        "husky": "^7.0.2",
        "pinst": "^2.1.6"
    },
    "peerDependencies": {
        "prettier": "^2.2.1",
        "react": "^17.0.1",
        "react-scripts": "^4.0.3",
        "typescript": "^4.2.2"
    },
    "engines": {
        "node": "^14.13.1 || >= 16.0.0"
    }
}