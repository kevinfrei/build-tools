{
  "name": "@freik/build-tools",
  "version": "3.2.0",
  "description": "Tools for building stuff (cross platform!)",
  "author": "Kevin Frei (kevinfrei@hotmail.com)",
  "license": "Unlicense",
  "type": "module",
  "bin": {
    "er": "./lib/tools.js"
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevinfrei/build-tools.git"
  },
  "scripts": {
    "min": "node ./lib/tools.js minify -i lib/*.js",
    "test": "jest --passWithNoTests --config jestconfig.json",
    "build": "rimraf lib && tsc",
    "prepare": "yarn run build",
    "prepublishOnly": "yarn test && yarn run lint && pinst --disable",
    "format": "prettier --write \"**/*.ts\" \"**/*.md\" \"**/*.json\" \"**/*.js\"",
    "lint": "yarn run eslint --fix --ext .ts src",
    "preversion": "yarn run lint",
    "version": "yarn run format && git add -A src",
    "postversion": "git push && git push --tags --no-verify",
    "compile": "tsc --noEmit",
    "chk": "yarn format && yarn lint && yarn compile && yarn test",
    "postinstall": "husky install",
    "postpublish": "pinst --enable"
  },
  "dependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-flow": "^7.16.5",
    "@babel/preset-react": "^7.16.5",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "@typescript-eslint/parser": "^5.8.0",
    "concurrently": "^6.5.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "glob": "^7.2.0",
    "jest": "^27.4.5",
    "jest-extended": "^1.2.0",
    "jest-transform-css": "^3.0.0",
    "minimist": "^1.2.5",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.61.1",
    "rollup-plugin-dts": "^4.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "shelljs": "^0.8.4",
    "source-map-explorer": "^2.5.2",
    "terser": "^5.10.0",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4",
    "wait-on": "^6.0.0"
  },
  "devDependencies": {
    "@types/concurrently": "^6.4.0",
    "@types/glob": "^7.2.0",
    "@types/jest": "^27.0.3",
    "@types/minimist": "^1.2.2",
    "@types/node": "^17.0.2",
    "@types/shelljs": "^0.8.10",
    "@types/uglify-es": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "husky": "^7.0.4",
    "pinst": "^2.1.6"
  },
  "peerDependencies": {
    "prettier": "^2.5.0",
    "react": "^17.0.0",
    "react-scripts": "^5.0.0",
    "typescript": "^4.5.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-scripts": {
      "optional": true
    }
  },
  "engines": {
    "node": "^14.13.1 || >= 16.0.0"
  }
}
