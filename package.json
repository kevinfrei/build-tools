{
  "name": "@freik/build-tools",
  "version": "3.1.6",
  "description": "Tools for building stuff (cross platform!)",
  "author": "Kevin Frei (kevinfrei@hotmail.com)",
  "license": "Unlicense",
  "type": "module",
  "bin": {
    "er": "./lib/tools.js"
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevinfrei/build-tools.git"
  },
  "scripts": {
    "min": "node ./lib/tools.js minify -i lib/*.js",
    "test": "jest --passWithNoTests --config jestconfig.json",
    "build": "rimraf lib && tsc",
    "prepare": "yarn run build",
    "prepublishOnly": "yarn test && yarn run lint && pinst --disable",
    "format": "prettier --write \"**/*.ts\" \"**/*.md\" \"**/*.json\" \"**/*.js\"",
    "lint": "yarn run eslint --fix --ext .ts src",
    "preversion": "yarn run lint",
    "version": "yarn run format && git add -A src",
    "postversion": "git push && git push --tags --no-verify",
    "compile": "tsc --noEmit",
    "chk": "yarn format && yarn lint && yarn compile && yarn test",
    "postinstall": "husky install",
    "postpublish": "pinst --enable"
  },
  "dependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-flow": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@typescript-eslint/parser": "^5.1.0",
    "concurrently": "^6.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "glob": "^7.2.0",
    "jest": "^27.3.1",
    "jest-extended": "^1.1.0",
    "jest-transform-css": "^2.1.0",
    "minimist": "^1.2.5",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.58.3",
    "rollup-plugin-dts": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "shelljs": "^0.8.4",
    "source-map-explorer": "^2.5.2",
    "terser": "^5.9.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4",
    "wait-on": "^6.0.0"
  },
  "devDependencies": {
    "@types/concurrently": "^6.3.0",
    "@types/glob": "^7.2.0",
    "@types/jest": "^27.0.2",
    "@types/minimist": "^1.2.2",
    "@types/node": "^16.11.5",
    "@types/shelljs": "^0.8.9",
    "@types/uglify-es": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "husky": "^7.0.4",
    "pinst": "^2.1.6"
  },
  "peerDependencies": {
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-scripts": "^4.0.3",
    "typescript": "^4.2.2"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-scripts": {
      "optional": true
    }
  },
  "engines": {
    "node": "^14.13.1 || >= 16.0.0"
  }
}
