{
  "name": "@freik/build-tools",
  "version": "3.5.0",
  "description": "Tools for building stuff (cross platform!)",
  "author": "Kevin Frei (kevinfrei@hotmail.com)",
  "license": "Unlicense",
  "type": "module",
  "bin": {
    "er": "./lib/tools.js",
    "ftool": "./lib/tools.js"
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevinfrei/build-tools.git"
  },
  "scripts": {
    "min": "node ./lib/tools.js minify -i lib/*.js",
    "test": "jest --passWithNoTests --config jestconfig.json",
    "build": "rimraf lib && tsc",
    "prepare": "yarn run build",
    "prepublishOnly": "yarn test && yarn run lint && yarn pinst --disable",
    "format": "ftool format",
    "lint": "yarn run eslint --fix --ext .ts src",
    "preversion": "yarn run lint",
    "version": "yarn run format && git add -A src",
    "postversion": "git push && git push --tags --no-verify",
    "compile": "tsc --noEmit",
    "chk": "yarn format && yarn lint && yarn compile && yarn test",
    "postinstall": "husky install",
    "postpublish": "yarn pinst --enable"
  },
  "dependencies": {
    "@babel/cli": "~7.21.0",
    "@babel/core": "~7.21.4",
    "@babel/preset-env": "~7.21.4",
    "@babel/preset-flow": "~7.21.4",
    "@babel/preset-react": "~7.18.6",
    "@freik/node-utils": "^1.3.1",
    "@rollup/plugin-babel": "~6.0.3",
    "@rollup/plugin-node-resolve": "~15.0.2",
    "@rollup/plugin-terser": "^0.4.0",
    "@typescript-eslint/parser": "~5.57.1",
    "concurrently": "~8.0.1",
    "cross-env": "~7.0.3",
    "eslint": "~8.37.0",
    "eslint-config-prettier": "~8.8.0",
    "eslint-plugin-import": "~2.27.5",
    "eslint-plugin-prettier": "~4.2.1",
    "glob": "~9.3.4",
    "jest": "~29.5.0",
    "jest-extended": "~3.2.4",
    "jest-transform-css": "~6.0.1",
    "minimist": "~1.2.8",
    "postcss": "~8.4.21",
    "prettier": "~2.8.7",
    "rimraf": "~4.4.1",
    "rollup": "~3.20.2",
    "rollup-plugin-dts": "~5.3.0",
    "shelljs": "~0.8.5",
    "source-map-explorer": "~2.5.3",
    "terser": "~5.16.8",
    "ts-jest": "~29.1.0",
    "typescript": "~5.0.3",
    "wait-on": "~7.0.1"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.0",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.15.11",
    "@types/shelljs": "^0.8.11",
    "@types/uglify-es": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "husky": "^8.0.3",
    "pinst": "^3.0.0"
  },
  "peerDependencies": {
    "prettier": "~2",
    "react": "~17",
    "react-scripts": "~5",
    "typescript": ">=4.7.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-scripts": {
      "optional": true
    }
  },
  "engines": {
    "node": "~14.13.1 || >= 16.0.0"
  },
  "packageManager": "yarn@3.5.0"
}
